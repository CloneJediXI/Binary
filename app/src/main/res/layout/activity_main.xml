<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/image"
        android:src="@drawable/minimonitor"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:padding="5dp"
        android:id="@+id/switchholder"
        android:layout_below="@id/image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/on"/>

        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:onClick="clicked"
            android:layout_below="@id/on"
            android:id="@+id/s0"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s0"
            android:onClick="clicked"
            android:id="@+id/s1"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s1"
            android:onClick="clicked"
            android:id="@+id/s2"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s2"
            android:onClick="clicked"
            android:id="@+id/s3"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s3"
            android:onClick="clicked"
            android:id="@+id/s4"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s4"
            android:onClick="clicked"
            android:id="@+id/s5"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s5"
            android:onClick="clicked"
            android:id="@+id/s6"/>
        <ImageButton
            android:layout_width="@dimen/switchwidth"
            android:layout_height="@dimen/switchheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/switchverticaloff"
            android:layout_below="@id/on"
            android:layout_toRightOf="@id/s6"
            android:onClick="clicked"
            android:id="@+id/s7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s7"/>

    </RelativeLayout>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrowdown"
        android:layout_below="@id/switchholder"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="flip"
        android:id="@+id/arrow"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/decimal"
        android:layout_below="@id/arrow"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_margin="15dp"/>



</RelativeLayout>