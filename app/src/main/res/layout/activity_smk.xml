<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SmkActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/image"
        android:src="@drawable/smkdet"
        android:contentDescription="An Image of a Smoke Detector"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#ddd"
        android:padding="5dp"
        android:id="@+id/switchholder"
        android:layout_below="@id/image">
        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"

            android:layout_marginLeft="40dp"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"


            android:id="@+id/s1"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:scaleType="fitCenter"
            android:src="@drawable/nodot"
            android:layout_below="@id/s1"
            android:id="@+id/s0"/>

        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"
            android:layout_below="@id/s1"
            android:layout_toRightOf="@id/s0"
            android:id="@+id/s2"/>
        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/s1"

            android:id="@+id/s3"/>
        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"
            android:layout_below="@id/s1"
            android:layout_toRightOf="@id/s2"
            android:id="@+id/s4"/>
        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"

            android:layout_toRightOf="@id/s3"
            android:id="@+id/s5"/>
        <ImageButton
            android:layout_width="@dimen/dotwidth"
            android:layout_height="@dimen/dotheight"
            android:layout_margin="@dimen/switchmargin"
            android:src="@drawable/nodot"
            android:scaleType="centerCrop"
            android:layout_below="@id/s1"
            android:layout_toRightOf="@id/s4"
            android:id="@+id/s6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s0"
            android:paddingLeft="10dp"

            android:layout_alignLeft="@id/s0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_above="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s1"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s4"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s4"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s4"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_below="@id/s4"
            android:paddingLeft="10dp"
            android:layout_alignLeft="@id/s6"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/netron"
        android:id="@+id/l1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@id/l1"
        android:fontFamily="@font/netron"
        android:id="@+id/l2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@id/l2"
        android:fontFamily="@font/netron"
        android:id="@+id/l3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/l3"
        android:fontFamily="@font/netron"
        android:id="@+id/l4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/l4"
        android:fontFamily="@font/netron"
        android:id="@+id/l5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/l5"
        android:fontFamily="@font/netron"
        android:id="@+id/l6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="64"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/switchholder"
        android:paddingLeft="10dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/l6"
        android:fontFamily="@font/netron"
        android:id="@+id/l7"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrowdown"
        android:layout_below="@id/l1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="flip"
        android:id="@+id/arrow"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/edittextbackground"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/decimal"
        android:layout_below="@id/arrow"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:enabled="false"
        android:layout_margin="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20sp"
        android:layout_below="@id/decimal"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:onClick="back"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>